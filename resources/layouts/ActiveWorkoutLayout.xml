<layout id="ActiveWorkoutLayout">
    <label id="exerciseName" x="center" y="10" text="Exercise Name" color="Graphics.COLOR_WHITE" justification="Graphics.TEXT_JUSTIFY_CENTER" />
    <label id="sets" x="center" y="40" text="Set: 1/3" color="Graphics.COLOR_WHITE" justification="Graphics.TEXT_JUSTIFY_CENTER" />
    <label id="reps" x="center" y="70" text="Reps: 0/10" color="Graphics.COLOR_WHITE" justification="Graphics.TEXT_JUSTIFY_CENTER" />
    <label id="weight" x="center" y="100" text="Weight: 100kg" color="Graphics.COLOR_WHITE" justification="Graphics.TEXT_JUSTIFY_CENTER" />
    <label id="timer" x="center" y="130" text="Rest: 60s" color="Graphics.COLOR_WHITE" justification="Graphics.TEXT_JUSTIFY_CENTER" />
    <label id="history" x="center" y="160" text="Last: 3x8 @ 100kg" color="Graphics.COLOR_LT_GRAY" justification="Graphics.TEXT_JUSTIFY_CENTER" />
    <drawable id="skipButton" class="Button">
        <param name="label">@Strings.skip</param>
        <param name="x">50</param>
        <param name="y">200</param>
        <param name="width">80</param>
        <param name="height">40</param>
        <param name="backgroundColor">Graphics.COLOR_DK_GRAY</param>
        <param name="foregroundColor">Graphics.COLOR_WHITE</param>
    </drawable>
    <drawable id="substituteButton" class="Button">
        <param name="label">@Strings.substitute</param>
        <param name="x">150</param>
        <param name="y">200</param>
        <param name="width">80</param>
        <param name="height">40</param>
        <param name="backgroundColor">Graphics.COLOR_DK_GRAY</param>
        <param name="foregroundColor">Graphics.COLOR_WHITE</param>
    </drawable>
</layout>
